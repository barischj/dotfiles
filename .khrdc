# Enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFFD5C4A1

# Enable the prefix mode
khd mode prefix prefix on
khd mode prefix timeout 0.75
khd mode prefix restore default
khd mode prefix color 0xFF458588

# Random System Shortcuts

0xA : /Applications/Mission\ Control.app/Contents/MacOS/Mission\ Control 1

# Applications Shortcuts
cmd - e  : open -a emacs
cmd - i  : open -a /Applications/iTerm2.app
cmd - b  : open -a /Applications/Google\ Chrome.app

# Window Manager Navigation
cmd - 0x1E : kwmc window -f next
cmd - 0x21 : kwmc window -f prev

# Window Manager Move window
cmd + alt - 0x21 :    kwmc window -s prev
cmd + alt - 0x1E :    kwmc window -s next

# Window Manager fload current window
alt - f [Emacs] ! : kwmc window -t focused
